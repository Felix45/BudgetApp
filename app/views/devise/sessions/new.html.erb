<% @title = 'Login' %>
<div class="container mt-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group mb-3 mt-3 px-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter email' %>
  </div>

  <div class="field form-group mb-3 mt-3 px-3">
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group px-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions form-group mb-3 mt-3 px-3">
    <%= f.submit "Log in", class: 'btn btn-primary btn-sm bg-blue col-12' %>
  </div>
<% end %>
</div>

<div class="container text-center">
  <%= render "devise/shared/links" %>
</div>
