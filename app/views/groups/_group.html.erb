<div id="<%= dom_id group %>">
  <p>
    <strong>Name:</strong>
    <%= group.name %>
  </p>

  <p>
    <strong>Icon:</strong>
    <img src=<%= group.icon %> alt=<%= group.name %> width="150" />
  </p>

  <p>
    <strong>Description:</strong>
    <%= group.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= group.user.name %>
  </p>

</div>
